<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android_taxi_booker.MainActivity" >

    <TextView
        android:id="@+id/textFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from" />

    <EditText
        android:id="@+id/inputFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Order"
        android:layout_below="@+id/textFrom"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textFrom"
        android:layout_alignStart="@+id/textFrom"
        android:layout_below="@+id/inputFrom"
        android:layout_marginTop="139dp"
        android:text="OK" />

    <TextView
        android:id="@+id/textTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputFrom"
        android:layout_below="@+id/inputFrom"
        android:layout_marginTop="18dp"
        android:text="@string/to" />

    <EditText
        android:id="@+id/inputTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textTo"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/textTo"
        android:layout_below="@+id/textTo"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text" />

</RelativeLayout>